{% block body_id 'admin_product_edit' %}

{% block main %}
    <h1>Sá»­a {{ type.name |trans |lower}}</h1>

    {{ include('admin/post/_form.html.twig', {
        form: edit_form,
        button_label: 'action.page.save'|trans,
        category: category,
        post: post,
    }, with_context = false) }}
{% endblock %}

{% block sidebar %}
