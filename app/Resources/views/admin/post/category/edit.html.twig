{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_menu_edit' %}

{% block main %}
    <h1>{{ 'title.menu.edit'|trans({'%id%': category.id}) }}</h1>

    {{ include('admin/post/category/_form.html.twig', {
        form: edit_form,
        type: type,
        button_label: 'action.menu.save'|trans,
    }, with_context = false) }}
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        {{ include('admin/post/category/_form.html.twig', {
            form: delete_form,
            type: type,
            button_label: 'action.menu.delete'|trans,
            button_css: 'btn btn-lg btn-block btn-danger',
            include_back_to_home_link: false
        }, with_context = false) }}
    </div>

    {{ parent() }}

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(function () {

            // Replace the <textarea id="editor1"> with a CKEditor
            // instance, using default configuration.
            CKEDITOR.replace('app_menu[content]');

        });
    </script>

{% endblock %}
