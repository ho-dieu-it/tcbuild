                    <th>{{ 'label.menu.slug'|trans }}</th>
                    <th>{{ 'label.menu.description'|trans }}</th>
                    <th><i class="fa fa-cogs"> {{ 'label.actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for menu in menus %}
                    {% if menu.slug != 'header' %}
                    <tr>
                        <td>{{ menu.title | md2html }}</td>
                        <td>{{ menu.slug | md2html}}</td>
                        <td>{{ menu.description | md2html}}</td>
                        <td>
                            <div class="item-actions">
                                {#{% if ( menu.slug != 'footer' and menu.slug != 'header' )  %}#}
                                    {#<a href="{{ path('admin_menu_show', { id: menu.id }) }}" class="btn btn-sm btn-default">#}
                                        {#{{ 'action.show'|trans }}#}
                                    {#</a>#}

                                    {#{% if menu.isAuthor(app.user) %}#}
                                        {#<a href="{{ path('admin_menu_edit', { id: menu.id }) }}" class="btn btn-sm btn-primary">#}
                                            {#<i class="fa fa-edit"></i> {{ 'action.edit'|trans }}#}
                                        {#</a>#}
                                    {#{% endif %}#}
                                {#{% endif %}#}
                                {% if menu.slug == 'header' %}
                                    <a href="{{ path('admin_page_show', { id: 25 }) }}" class="btn btn-sm btn-default">
                                        {{ 'action.menu.show'|trans }}
                                    </a>
                                {% elseif menu.slug == 'footer' %}
                                    <a href="{{ path('admin_page_show', { id: 27 }) }}" class="btn btn-sm btn-default">
                                        {{ 'action.menu.show'|trans }}
                                    </a>
                                {% elseif menu.slug == 'lien-he' %}
                                    <a href="{{ path('admin_page_show', { id: 24 }) }}" class="btn btn-sm btn-default">
                                        {{ 'action.menu.show'|trans }}
                                    </a>
                                {% else %}
                                    <a href="{{ path('admin_page_index', { id: menu.id }) }}" class="btn btn-sm btn-default">
                                        {{ 'action.menu.show'|trans }}
                                    </a>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% endif %}
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th>{{ 'label.menu.title'|trans }}</th>
                    <th>{{ 'label.menu.slug'|trans }}</th>
                    <th>{{ 'label.menu.description'|trans }}</th>
                    <th><i class="fa fa-cogs"> {{ 'label.actions'|trans }}</th>
                </tr>
                </tfoot>
            </table>
        </div><!-- /.box-body -->
    </div><!-- /.box -->
{% endblock %}

