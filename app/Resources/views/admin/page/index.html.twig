{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_post_index' %}

{% block main %}
    <div class="box">
        <div class="box-header">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>{{ 'label.page.title'|trans }}</th>
                    <th>{{ 'label.page.slug'|trans }}</th>
                    <th>{{ 'label.page.published_at'|trans }}</th>
                    <th><i class="fa fa-cogs"> {{ 'label.actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for page in pages %}
                    <tr>
                        <td>{{ page.title }}</td>
                        <td>{{ page.slug }}</td>
                        <td>{{ page.createdAt|localizeddate('long', 'medium') }}</td>
                        <td>
                            <div class="item-actions">
                                <a href="{{ path('admin_page_show', { id: page.id }) }}" class="btn btn-sm btn-default">
                                    {{ 'action.show'|trans }}
                                </a>

                                {% if page.isAuthor(app.user) %}
                                    <a href="{{ path('admin_page_edit', { id: page.id }) }}" class="btn btn-sm btn-primary">
                                        <i class="fa fa-edit"></i> {{ 'action.edit'|trans }}
                                    </a>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th>{{ 'label.page.title'|trans }}</th>
                    <th>{{ 'label.page.slug'|trans }}</th>
                    <th>{{ 'label.page.published_at'|trans }}</th>
                    <th><i class="fa fa-cogs"> {{ 'label.actions'|trans }}</th>
                </tr>
                </tfoot>
            </table>
        </div><!-- /.box-body -->
    </div><!-- /.box -->
    <a href="{{ path('admin_menu_index') }}"> {{ 'action.page.list'|trans }}
    </a>
{% endblock %}

