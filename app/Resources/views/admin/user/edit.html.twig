{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_user_edit' %}

{% block main %}
    <h1>{{ 'title.user.edit'|trans({'%id%': user_item.id}) }}</h1>

    {{ include('admin/user/_form.html.twig', {
        form: edit_form,
            button_label: 'action.user.save'|trans,
    }, with_context = false) }}
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        {{ include('admin/user/_form.html.twig', {
            form: delete_form,
            button_label: 'action.user.delete'|trans,
            button_css: 'btn btn-lg btn-block btn-danger',
            include_back_to_home_link: false
        }, with_context = false) }}
    </div>

    {{ parent() }}

{% endblock %}
{% block javascripts %}
    {{ parent() }}

{% endblock %}
