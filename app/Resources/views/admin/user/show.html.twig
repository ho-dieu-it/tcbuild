{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_product_show' %}

{% block main %}
    <h1>{{ 'title.user.title'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'label.user.username'|trans }}</th>
                <td>{{ data.username|md2html }}</td>
            </tr>
            <tr>
                <th>{{ 'label.user.email'|trans }}</th>
                <td>{{ data.email|md2html }}</td>
            </tr>
            <tr>
                <th>{{ 'label.user.role'|trans }}</th>
                <td><p>{{ data.roles|first }}</p></td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('admin_user_index') }}" class="btn btn-link">
        {{ 'action.user.back_to_list'|trans }}
    </a>
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('admin_user_edit', { id: data.id }) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-edit"></i> {{ 'action.user.edit'|trans }}
        </a>
    </div>

    <div class="section">
        {{ include('admin/user/_form.html.twig', {
            form: delete_form,
            button_label: 'action.user.delete'|trans,
            button_css: 'btn btn-lg btn-block btn-danger',
            include_back_to_home_link: false
        }, with_context = false) }}
    </div>

{% endblock %}
