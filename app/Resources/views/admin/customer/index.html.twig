                    {#<th>{{ 'label.customer.phone'|trans }}</th>#}
                    {#<th>{{ 'label.customer.website'|trans }}</th>#}
                    {#<th>{{ 'label.customer.createdAt'|trans }}</th>#}
                    {#<th>{{ 'label.customer.uploadLogo'|trans }}</th>#}
                    {#<th><i class="fa fa-cogs"> {{ 'label.actions'|trans }}</th>#}
                {#</tr>#}
                {#</tfoot>#}
            </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_customer_new') }}" class="btn btn-success">
            <i class="fa fa-plus"></i> {{ 'action.customer.create'|trans }}
        </a>
        <a href="" class="btn btn-danger">
            <i class="fa fa-trash"></i> {{ 'action.customer.delete'|trans }}
        </a>
    </div>

