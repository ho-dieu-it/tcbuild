{% endblock %}
{% block business_fields %}
    <div class="col-md-9 services">
        <div class="row">
            {% for field in menus %}
                <div class="col-md-4">
                    <h3 class="title">{{ field.title }}</h3>
                    <div class="image">
                        <a href="#">
                            <img class="img-responsive" src="{{ asset('uploads/products/product.jpg')}}">
                        </a>
                    </div>
                    <p> {{ field.summary }}
                        <a href="{{ path('field_index',{slug:field.slug}) }}" class="viewmore">xem thêm</a></p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block projects %}
    <section class="tab-category-container clearfix">
        <div class="row">
            <div class="tabs-category clearfix">
                <div class="tab-content clearfix">
                    <div class="tabs-title">
                        <div id="" class="tab-title">
                            <h3>
                                <span>Dự án đã thực hiện</span>
                            </h3>
                        </div>
                    </div>
                    <ul class="tab-cates">
                        <li data-title="" rel="" class="active"> Tất cả</li>
                        <li data-title="" rel=""> Biệt thự</li>
                        <li data-title="" rel=""> Nhà xưởng</li>
                        <li data-title="" rel=""> Nhà phố</li>
                        <li data-title="" rel=""> Nhà cao tầng</li>
                        <li data-title="" rel=""> Khu nghỉ mát</li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="product-slide product-content owl-carousel ">
                    <div class="product-block product-grid clearfix" id="product-slide">
                        {% for product in present_products %}
                        {% set image = 'no_image.png' %}
                        {% if product.images is defined and (product.images|first) %}
                        {% set image = (product.images|first).name %}
                        {% endif %}
                        {% set url =  path('product_show', { slug: product.slug }) %}
                        <div class="product-resize product-item-box fixheight">
                            <div class="product-item">
                                <div class="image image-resize">
                                    <a href="{{ url }}">
                                        <img class="img-responsive" src="{{ asset('uploads/products/') }}{{ image }}"/>
                                    </a>
                                    <div class="overlay">
                                    </div>
                                    <span class="new"></span>
                                </div>
                                <div class="right-block">
                                    <h2 class="name">
                                        <a href="{{ url }}">{{ product.name }}</a>
                                    </h2>
                                    <p>{{ product.summary }}</p>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    <div class="controls boxprevnext">
                        <a class="prev prevlogo"><i class="fa fa-angle-left"></i></a>
                        <a class="next nextlogo"><i class="fa fa-angle-right"></i></a>
                    </div>

                </div>
            </div>

        </div>

        </div>
    </section>
{% endblock %}

