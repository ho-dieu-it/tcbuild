{% block hot_product %}
<div class="col-md-3 menu-about">
    <div class="box-project">
        <h3 class="title clearfix">
            <span>Dự án nổi bật</span>
        </h3>

        {% set product = hot_products|first %}
        {% set image = product.images|first %}
        {% set url =  path('product_show', { slug: product.slug }) %}
        {% set image = 'no_image.png' %}
        {% if product.images is defined and (product.images|first) %}
            {% set image = (product.images|first).name %}
        {% endif %}
        {% set url =  path('product_show', { slug: product.slug }) %}
        <div class="box-project-block">
            <div class="item">
                <div class="image image-resize">
                    <a href="{{ url }}">
                        <img class="img-responsive"
                        src="{{ asset('uploads/products/') }}{{ image }}"/>
                    </a>
                </div>
                <div class="right-block">
                    <h2 class="name"><a href="{{ url }}">{{ product.name }}</a></h2>
                    <div class="description">{{ product.summary }}</div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
